<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BBSportsMobile.Navigation"
             Title="BB Sports"
             Padding="10, 10, 10, 10"
             >
    <ContentPage.Content>
        <StackLayout Spacing="40">
            <Label Text="Welcome to BB Sports!" FontSize="Large" HorizontalTextAlignment="Center" />
            <Button x:Name="newMeetButton" Text="Create Meet" Clicked="MeetButton_Clicked" />
            <Button x:Name="newPerformButton" Text="New Performance" Clicked="NewPerformButton_Clicked"/>
            <Button x:Name="switchTeamButton" Text="Switch Team" Clicked="SwitchTeams_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>